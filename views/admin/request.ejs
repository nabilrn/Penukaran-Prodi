<%- include("../sidebar.ejs") %>
<div class="w-full pt-10 px-4 sm:px-6 md:px-8 lg:ps-72">
  <h2 class="text-2xl font-bold md:text-4xl md:leading-tight ">Request Pindah Prodi</h2>

  <div class="max-w-[85rem] mx-auto py-10 px-4 sm:px-6 lg:px-8">
  
   <!-- Table Section -->
    <!-- Card -->
    <div class="flex flex-col">
      <div class="-m-1.5 overflow-x-auto">
        <div class="p-1.5 min-w-full inline-block align-middle">
          <div
            class="bg-white border border-gray-200 rounded-xl shadow-sm overflow-hidden"
          >
            <!-- Header -->
            <div
              class="px-6 py-4 grid gap-3 md:flex md:justify-between md:items-center border-b border-gray-200"
            >
              <!-- Input -->
              <div class="sm:col-span-1">
                <label for="hs-as-table-product-review-search" class="sr-only"
                  >Search</label
                >
                <div class="relative">
                  <input
                    type="text"
                    id="hs-as-table-product-review-search"
                    name="hs-as-table-product-review-search"
                    class="py-2 px-3 ps-11 block w-full border border-gray-200 rounded-lg text-sm focus:border-blue-500 focus:ring-blue-500 disabled:opacity-50 disabled:pointer-events-none"
                    placeholder="Search"
                  />
                  <div
                    class="absolute inset-y-0 start-0 flex items-center pointer-events-none ps-4"
                  >
                    <svg
                      class="flex-shrink-0 size-4 text-gray-400"
                      xmlns="http://www.w3.org/2000/svg"
                      width="24"
                      height="24"
                      viewBox="0 0 24 24"
                      fill="none"
                      stroke="currentColor"
                      stroke-width="2"
                      stroke-linecap="round"
                      stroke-linejoin="round"
                    >
                      <circle cx="11" cy="11" r="8" />
                      <path d="m21 21-4.3-4.3" />
                    </svg>
                  </div>
                </div>
              </div>
              <!-- End Input -->
            </div>
            <!-- End Header -->

            <!-- Table -->

            <table class="min-w-full divide-y divide-gray-200 text-sm">
              <thead class="bg-gray-50">
                <tr>
                  <th scope="col" class="px-4 py-2 text-start">
                    <span class="font-semibold text-gray-800">Nama</span>
                  </th>
                  <th scope="col" class="px-4 py-2 text-start">
                    <span class="font-semibold text-gray-800">NIM</span>
                  </th>
                  <th scope="col" class="px-4 py-2 text-start">
                    <span class="font-semibold text-gray-800">Departemen</span>
                  </th>
                  <th scope="col" class="px-4 py-2 text-start">
                    <span class="font-semibold text-gray-800">Departemen Tujuan</span>
                  </th>
                  <th scope="col" class="px-4 py-2 text-start">
                    <span class="font-semibold text-gray-800">Tanggal Pengajuan</span>
                  </th>
                  <th scope="col" class="px-4 py-2 text-start">
                    <span class="font-semibold text-gray-800">Tanggal Update</span>
                  </th>
                  <th scope="col" class="px-4 py-2 text-end">
                    <span class="font-semibold text-gray-800">Detail</span>
                  </th>
                </tr>
              </thead>
              <tbody class="divide-y divide-gray-200">
                <% permohonanList.forEach(permohonan => { %>
                  <tr>
                    <td class="px-4 py-2">
                      <span class="text-gray-800"><%= permohonan.Mahasiswa.User.nama %></span>
                    </td>
                    <td class="px-4 py-2">
                      <span class="text-gray-800"><%= permohonan.Mahasiswa.User.username %></span>
                    </td>
                    <td class="px-4 py-2">
                      <span class="text-gray-800"><%= permohonan.Mahasiswa.departemen %></span>
                    </td>
                    <td class="px-4 py-2">
                      <span class="text-gray-600"><%= permohonan.departemen_tujuan %></span>
                    </td>
                    <td class="px-4 py-2">
                      <span class="text-gray-600"><%= new Date(permohonan.createdAt).toLocaleDateString() %></span>
                    </td>
                    <td class="px-4 py-2">
                      <span class="text-gray-600"><%= new Date(permohonan.updatedAt).toLocaleDateString() %></span>
                    </td>
                    <td class="px-4 py-2">
                      <a href="/admin/request/<%= permohonan.id %>" class="details-icon py-3 px-4 inline-flex items-center gap-x-2 text-sm font-semibold rounded-lg border border-transparent text-black" data-hs-overlay="#hs-modal-upgrade-to-pro">
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-ellipsis-vertical">
                          <circle cx="12" cy="12" r="1"/>
                          <circle cx="12" cy="5" r="1"/>
                          <circle cx="12" cy="19" r="1"/>
                        </svg>
                      </a>
                    </td>
                  </tr>
                <% }) %>
              </tbody>
            </table>
            
            <!-- Modal -->
            <div id="hs-modal-upgrade-to-pro" class="hs-overlay hidden fixed top-0 start-0 z-[80] overflow-x-hidden overflow-y-auto size-full">
              <div class="hs-overlay-open:mt-7 hs-overlay-open:opacity-100 hs-overlay-open:duration-500 mt-0 opacity-0 ease-out transition-all sm:max-w-lg sm:w-full m-3 sm:mx-auto">
                <div class="bg-white border border-gray-200 rounded-xl shadow-sm pointer-events-auto">
                  <div class="p-4 sm:p-7">
                    <div class="text-center">
                      <h2 class="block text-xl sm:text-2xl font-semibold text-gray-800">Details</h2>
                    </div>
                    <div class="mt-8 sm:mt-10 divide-y divide-gray-200" id="modal-content">
                      <!-- Dynamic content will be injected here -->
                    </div>
                  </div>
                  <!-- Footer -->
                  <div class="flex justify-end items-center gap-x-2 p-4 sm:px-7 border-t">
                    <button type="button" class="py-2 px-3 inline-flex items-center gap-x-2 text-sm font-medium rounded-lg border border-gray-200 bg-white text-gray-800 shadow-sm hover:bg-gray-50" onclick="closeModal()">
                      Cancel
                    </button>
                  </div>
                  <!-- End Footer -->
                </div>
              </div>
            </div>
            <script>
              document.querySelectorAll('.details-icon').forEach(icon => {
                icon.addEventListener('click', async function (event) {
                  event.preventDefault();
                  const href = this.getAttribute('href');
            
                  try {
                    const response = await fetch(href);
                    const data = await response.json(); // Ubah response ke JSON
                    showDetailModal(data);
                  } catch (error) {
                    console.error('Error fetching details:', error);
                  }
                });
              });
            
              function showDetailModal(permohonan) {
                const modalContent = `
                  <div class="modal-body">
                    <p>Permohonan ID: ${permohonan.id}</p>
                    <p class="text-sm text-gray-500">Nama: ${permohonan.Mahasiswa.User.nama}</p>
                    <p class="text-sm text-gray-500">NIM: ${permohonan.Mahasiswa.User.username}</p>
                    <p class="text-sm text-gray-500">Departemen: ${permohonan.Mahasiswa.departemen}</p>
                    <p class="text-sm text-gray-500">Departemen Tujuan: ${permohonan.departemen_tujuan}</p>
                    <p class="text-sm text-gray-500">Tanggal Pengajuan: ${new Date(permohonan.createdAt).toLocaleDateString()}</p>
                    <p class="text-sm text-gray-500">Tanggal Update: ${new Date(permohonan.updatedAt).toLocaleDateString()}</p>
                  </div>
                `;
                
                document.getElementById('modal-content').innerHTML = modalContent;
                document.getElementById('hs-modal-upgrade-to-pro').classList.remove('hidden');
                document.getElementById('hs-modal-upgrade-to-pro').classList.add('hs-overlay-open');
              }
            
              function closeModal() {
                document.getElementById('hs-modal-upgrade-to-pro').classList.add('hidden');
                document.getElementById('hs-modal-upgrade-to-pro').classList.remove('hs-overlay-open');
              }
            </script>
            
                        
<!-- End Modal -->
<!-- end modal -->

<script src="/preline.js"></script>
  </body>
</html>
